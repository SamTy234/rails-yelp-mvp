<h1><%= "Write a review for #{@restaurant.name}"  %></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection:[0,1,2,3,4,5]%>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

